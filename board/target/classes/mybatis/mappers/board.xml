<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.board">
	<resultMap id="bdResult" type="boardVO">
		<result property="idx" column="idx" />
		<result property="subject" column="subject" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="sday" column="sday" />
		<result property="hit" column="hit" />

	</resultMap>

	<select id="selectAllBoardList" resultMap="bdResult">
      <![CDATA[
         select * from s_board order by sday desc
       ]]>
	</select>

	<select id="selectOne" resultMap="bdResult" parameterType="int">
  <![CDATA[
         select * from s_board where idx=#{idx}
       ]]>
	</select>

	<insert id="insertBoard" parameterType="boardVO">
  <![CDATA[
     insert into s_board(subject,title,content,hit)
     values (#{subject},#{title},#{content},#{hit})
  ]]>

	</insert>
	
<update id="updateBoard" parameterType="boardVO">
 <![CDATA[
 update s_board
 set subject=#{subject}, title=#{title} , content=#{content}, hit=#{hit}
 where
 idx=#{idx}
]]> 

</update>	

<delete id="deleteBoard" parameterType="int">
    <![CDATA[
	   delete from s_board
	   where
	   idx=#{idx}
	]]>

	</delete>

</mapper>

	

